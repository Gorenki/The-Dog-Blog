<%- include("partials/header.ejs") %>

<main>

  <section class="py-2 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">The Dog Blog</h1>
        <p class="lead text-body-secondary">Welcome to The Dog Blog! A place to share your favorite stories of our furry friends.</p>
        <p>
          <a href="/post" class="btn btn-primary my-2">Create New Post</a>
        </p>
      </div>
    </div>
  </section>

  <div class="album py-2 bg-body-tertiary">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% posts.forEach(post => { %>
          <div class="col">
            <div class="card shadow-sm">
              <img src="<%= post.image %>" class="bd-placeholder-img card-img-top" width="100%" height="225" alt="Dog Image">
              <div class="card-body">
                <p class="card-text"><%= post.text %></p>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>

</main>
  
<%- include("partials/footer.ejs") %>

